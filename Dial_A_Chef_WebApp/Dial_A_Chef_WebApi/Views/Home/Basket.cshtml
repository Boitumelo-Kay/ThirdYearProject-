@{
    ViewBag.Title = "Basket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>

<body style="background-image:url('/images/abtbg.jpg')">
    <br /><br /><br /><br /><br /><br />

    <!--Table Style-->
    <style>
        table {
            background: #f5f5f5;
	        box-shadow: inset 0 1px 0 #fff;
	        font-size: 16px;
           
        }

        th {
    background-color: gray;
	border-left: 1.5px solid black;
	border-right: 1.5px solid black;
	border-top: 1.5px solid black;
	border-bottom: 1.5px solid black;
	box-shadow: inset 0 1px 0 #999;
	color: #fff;
    font-weight: bold;
	padding: 10px 15px;
	position: relative;
	text-shadow: 0 1px 0 #000;	
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid white;
        }

    </style>


    <h4><font color="black">Basket</font></h4>

    <hr color="black" />

    <!--Pull list of all chefs dishes from database-->

    <table style="margin-bottom:6%">

        <tr>
            <th>Meal Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th> </th>
            <th> </th>
        </tr>

    </table>

    <div class="form-group">
        <div class="col-md-12">
            <ul class="nav-pills pull-left">
                <li><font size="7">@Html.ActionLink("Check Out", "", "", null, new { @class = "btn btn-primary" })</font></li>
            </ul>
        </div>
    </div>

  

    <div style="margin-bottom:25%">
    </div>


</body>
</html>

